{
  "name": "smart-contract-templates",
  "version": "1.0.0",
  "description": "Smart Contract templates",
  "homepage": "https://bitbucket.org/applicature/solidity.project-template#readme",
  "license": "UNLICENSED",
  "keywords": [
    "solidity",
    "ethereum",
    "smart",
    "contracts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://bitbucket.org/applicature/solidity.smart-contract-templates.git"
  },
  "author": "Andrew Zubko <andrew@applicature.com>",
  "engines": {
    "node": ">=8.11.3"
  },
  "scripts": {
    "ganache": "ganache-cli > /dev/null 2>&1 &",
    "develop": "truffle develop",
    "test": "truffle test",
    "compile": "truffle compile",
    "coverage": "./node_modules/.bin/solidity-coverage",
    "migrate-develop": "truffle migrate",
    "migrate": "truffle migrate --network rinkeby",
    "migrate-live": "truffle migrate --network live",
    "solhint": "solhint 'contracts/**/*.sol'",
    "solium": "solium -d contracts/",
    "test:ci": "npm run solhint && npm run coverage && npm run ganache && npm run test && npm run solium"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "minimetoken": "^0.2.0",
    "@digix/truffle-lightwallet-provider": "^0.1.4",
    "ethereumjs-wallet": "^0.6.0",
    "truffle-hdwallet-provider": "0.0.5",
    "truffle-wallet-provider": "0.0.5",
    "truffle": "^4.1.8"
  },
  "devDependencies": {
    "bignumber.js": "^4.1.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "eth-gas-reporter": "^0.1.1",
    "ethereumjs-abi": "^0.6.5",
    "ethereumjs-testrpc": "^4.1.3",
    "ganache-cli": "6.1.0",
    "husky": "^0.14.3",
    "mocha": "^5.0.0",
    "mocha-junit-reporter": "^1.17.0",
    "mocha-multi-reporters": "^1.1.7",
    "solhint": "^1.1.10",
    "solidity-coverage": "^0.5.0",
    "solium": "^1.1.7",
    "openzeppelin-solidity": "^1.10.0"
  }
}
